@model Tenant

@{
    ViewData["Title"] = "Edit Tenants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body card-margin">
    <header class="page-header">
        <h2>Edit Tenant</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a asp-controller="Setup" asp-action="ListTenants">
                        <i class="bx bx-radar"></i>
                    </a>
                </li>
                @* <li><span><a asp-controller="Companies" asp-action="Index">Companies</a></span></li>
                <li><span>New Client</span></li> *@
            </ol>

            @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <section class="card">
                <header class="card-header">
                    <h2 class="card-title">Edit Tenant</h2>
                </header>
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> @ViewBag.Message
                    </div>
                }
                <div class="card-body">
                    <form asp-action="EditTenant" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="TenantId" />
                        <div class="row form-group">
                            <div class="col-lg-6">
                                <label class="col-form-label" asp-for="Name"></label>
                                <div class="input-group">
                                    <input asp-for="Name" type="text" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger" />
                                </div>
                            </div>
                            
                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-4">
                                <div class="checkbox-custom checkbox-default">
                                    <input asp-for="IsActive" type="checkbox" />
                                    <label><a>Click the box to <strong>@(Model.IsActive ? "Deactivate" : "Activate")</strong> this Tenant</a></label>
                                </div>
                            </div>
                           
                        </div>

                        <footer class="card-footer text-right">
                            <input type="submit" value="Save" class="btn btn-primary" style="background-color:cornflowerblue" />
                            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                        </footer>
                    </form>
                </div>

            </section>


        </div>
    </div>

</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}