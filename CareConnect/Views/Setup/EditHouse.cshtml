@model HouseViewModel

@{
    ViewData["Title"] = "Edit House";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body card-margin">
    <header class="page-header">
        <h2>Edit House</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bx bx-bar-chart-alt-2"></i>
                    </a>
                </li>
                <li><span><a asp-controller="Setup" asp-action="ListHouses">Houses</a></span></li>
                <li><span>Edit House</span></li>
            </ol>

            @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <section class="card">
                <form asp-action="EditHouse" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="HouseId" />
                    <input type="hidden" asp-for="OrganizationId" />
                    <header class="card-header">
                        <h2 class="card-title">Edit House</h2>
                    </header>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> @ViewBag.Message
                        </div>
                    }
                    <div class="card-body">
                        
                        <div class="row form-group">
                            <div class="col-lg-6">
                                <label class="col-form-label" asp-for="HouseName"></label>
                                <input asp-for="HouseName" type="text" class="form-control" />
                                <span asp-validation-for="HouseName" class="text-danger"></span>
                            </div>

                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-3">
                                <label class="col-form-label" asp-for="Longitude"></label>
                                <input asp-for="Longitude" type="text" id="number_input" class="form-control" />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>

                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-3">
                                <label class="col-form-label" asp-for="Latitude"></label>
                                <input asp-for="Latitude" type="text" id="number_input" class="form-control" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="row form-group">
                            <div class="col-lg-6">
                                <label class="col-form-label" asp-for="Address"></label>
                                <input asp-for="Address" type="text" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-3">
                                <label class="col-form-label" asp-for="City"></label>
                                <input asp-for="City" type="text" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-3">
                                <label class="col-form-label" asp-for="PostCode"></label>
                                <input asp-for="PostCode" type="text" class="form-control" />
                                <span asp-validation-for="PostCode" class="text-danger"></span>
                            </div>

                        </div>
                        
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="checkbox-custom checkbox-default">
                                    <input asp-for="IsActive" type="checkbox" />
                                    <label><a>Click the box to <strong>@(Model.IsActive ? "Deactivate" : "Activate")</strong> this House</a></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer class="card-footer text-right">
                        <input type="submit" value="Save" class="btn btn-primary" style="background-color:cornflowerblue" />
                        <a class="btn btn-secondary" asp-action="ListHouses">Cancel</a>
                    </footer>
                </form>
            </section>


        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
