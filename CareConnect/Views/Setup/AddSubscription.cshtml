@model Subscription

@{
    ViewData["Title"] = "Add New Subscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Add New Subscription</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bx bx-bar-chart-alt-2"></i>
                    </a>
                </li>
                <li><span><a asp-controller="Setup" asp-action="ListSubscriptions">Subscriptions</a></span></li>
                <li><span>New Subscription</span></li>
            </ol>

            @*<a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>*@
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <section class="card">
                <form asp-action="AddSubscription" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <header class="card-header">
                        <h2 class="card-title">Add New Subscription</h2>
                    </header>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> @ViewBag.Message
                        </div>
                    }
                    <div class="card-body">
                    
                        <div class="row form-group">
                            <div class="col-lg-4">
                                <label class="col-form-label" asp-for="Organization"></label>
                                <select asp-for="OrganizationId" asp-items="ViewBag.OrganizationId" class="form-control">
                                    <option selected="selected" value="">Please Select Organization</option>
                                </select>
                                <span asp-validation-for="OrganizationId" class="text-danger"></span>
                            </div>

                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-4">
                                <label class="col-form-label" asp-for="SubscriptionRateId"></label>
                                <select asp-for="SubscriptionRateId" asp-items="ViewBag.SubscriptionRateId" class="form-control">
                                    <option selected="selected" value="">Please Select Rate</option>
                                </select>
                                <span asp-validation-for="SubscriptionRateId" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="row form-group">
                            <div class="col-lg-4">
                                <label class="col-form-label" asp-for="StartDate"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-4">
                                <label class="col-form-label" asp-for="EndDate"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3 hidden-lg"></div>

                            <div class="col-lg-4">
                                <label class="col-form-label" asp-for="Status"></label>
                                <select asp-for="Status" asp-items="Html.GetEnumSelectList<SubscriptionStatus>()" class="form-control">
                                    <option selected="selected" value="">Please Select Status</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                        </div>
                  
                    </div>
                    <footer class="card-footer text-right">
                        <input type="submit" value="Save" class="btn btn-primary" style="background-color:cornflowerblue" />
                        <a class="btn btn-secondary" asp-action="ListSubscriptions">Cancel</a>
                    </footer>
                </form>
            </section>


        </div>
    </div>

</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
