                    {
                        <li class="nav-parent">
                            <a class="nav-link" href="#">
                                <i class="bx bx-cog" aria-hidden="true"></i>
                                <span>Setup</span>
                            </a>
                            <ul class="nav nav-children">
                                <li>
                                    <a asp-controller="Setup" asp-action="ListTenants">
